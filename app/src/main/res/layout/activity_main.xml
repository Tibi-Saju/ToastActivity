<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#14F4F3">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Application Lab"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/toast_btn"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toast"/>
    <LinearLayout
        android:background="#0098FF"
        app:layout_constraintTop_toBottomOf="@+id/toast_btn"
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_gravity="center_horizontal"
            android:layout_width="325dp"
            android:layout_height="254dp"
            android:src="@drawable/tibi" />

        <TextView
            android:id="@+id/count_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/image"/>
        <Button
            android:id="@+id/count_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <TextView
        android:background="@color/teal_700"
        android:id="@+id/name_txt"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="TIBI SAJU \n2047261"
        android:inputType="textMultiLine"
        android:textSize="40dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>